# Vibe Companion subdomain config
# Copy this to vibe.theio.vn.conf and update server_name
#
# Cloudflare DNS setup:
#   Type: CNAME (or A record)
#   Name: vibe
#   Content: theio.vn (or server IP)
#   Proxy: ON (orange cloud)
#   SSL: Full (Strict)
#
# Then restart nginx: docker-compose restart nginx

server {
    listen 80;
    server_name vibe.theio.vn;

    location / {
        proxy_pass http://companion;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (critical for Companion)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
        proxy_buffering off;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
}
